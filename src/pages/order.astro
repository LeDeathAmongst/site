---
import Layout from "../layouts/Layout.astro";

// Define the properties for the SEO meta tags
const title = "Order Form - Rosie";
const description = "Submit your order here.";
const ogTitle = "Order Form - Rosie";
const ogImage = "https://yourdomain.com/path/to/your/og-image.jpg"; // Replace with your actual image URL
const url = "https://yourdomain.com/order"; // Replace with your actual URL
---

<Layout
  title={title}
  description={description}
  ogTitle={ogTitle}
  ogImage={ogImage}
  url={url}
>
  <h1>Order Form</h1>

  <form action="/submit-order" method="post" class="order-form">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required />

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required />

    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" required />

    <label for="payment-method">Method of Payment:</label>
    <select id="payment-method" name="paymentMethod" required>
      <option value="credit-card">Credit Card</option>
      <option value="paypal">PayPal</option>
      <option value="bank-transfer">Bank Transfer</option>
    </select>

    <button type="submit">Submit Order</button>
  </form>
</Layout>

<style>
  .order-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .order-form label {
    font-weight: bold;
  }

  .order-form input,
  .order-form textarea,
  .order-form select {
    width: 100%;
    padding: 0.5rem;
    font-size: 1rem;
  }

  .order-form button {
    width: fit-content;
    padding: 0.5rem 1rem;
    background-color: #007bff;
    color: white;
    border: none;
    cursor: pointer;
  }

  .order-form button:hover {
    background-color: #0056b3;
  }
</style>
