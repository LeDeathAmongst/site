---
import Layout from "../layouts/Layout.astro";
import ArticleIndex from "../components/ArticleIndex.astro";

// Define the properties for the SEO meta tags
const title = "Order Form - Rosie";
const description = "Submit your order here.";
const ogTitle = "Order Form - Rosie";

---

<Layout
  title={title}
  description={description}
  ogTitle={ogTitle}

>
  <ArticleIndex title="Order Form" navCurrent="/order">
    <Fragment slot="description">
      Please fill out the form below to submit your order. We offer multiple payment methods including CashApp, PayPal, and Venmo.
    </Fragment>

    <form action="/submit-order" method="post" class="order-form">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required />

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />

      <label for="description">Description:</label>
      <textarea id="description" name="description" required></textarea>

      <label for="price">Price:</label>
      <input type="number" id="price" name="price" required />

      <label for="payment-method">Method of Payment:</label>
      <select id="payment-method" name="paymentMethod" required>
        <option value="cashapp">CashApp</option>
        <option value="paypal">PayPal</option>
        <option value="venmo">Venmo</option>
      </select>

      <button type="submit">Submit Order</button>
    </form>
  </ArticleIndex>
</Layout>

<style>
  .order-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }

  .order-form label {
    font-weight: bold;
  }

  .order-form input,
  .order-form textarea,
  .order-form select {
    width: 100%;
    padding: 0.5rem;
    font-size: 1rem;
    background-color: black; /* Black background */
    color: white; /* White text */
    border: 1px solid white; /* White border */
  }

  .order-form button {
    width: fit-content;
    padding: 0.5rem 1rem;
    background-color: #007bff;
    color: white;
    border: none;
    cursor: pointer;
  }

  .order-form button:hover {
    background-color: #0056b3;
  }
</style>
