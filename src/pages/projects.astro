---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ArticleIndex from "../components/ArticleIndex.astro"; // Importing the ArticleIndex component

const projects = [
  {
    title: "Starfire",
    description: "Multi-Purpose Discord Bot, named after the Teen Titan, Starfire..",
    image: "../assets/starfire.png",
    link: "https://discord.com/oauth2/authorize?client_id=1275521742961508432",
  },
  // Add more projects as needed
];
---

<Layout
  title="Projects - Rosie"
  ogTitle="Projects"
  description="List of projects by Rosie."
>
  <ArticleIndex
    title="Projects"
    navCurrent="/projects"
  >
    <Fragment slot="description">
      Here are some of the projects I have worked on. Click on the cards to learn more about each project.
    </Fragment>

    {
      projects.map(({ title, description, image, link }) => (
        <ProjectCard title={title} description={description} image={image} link={link} />
      ))
    }
  </ArticleIndex>
</Layout>
