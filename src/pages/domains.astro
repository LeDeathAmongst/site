---
import Layout from "../layouts/Layout.astro";
import DomainCard from "../components/DomainCard.astro";
import ArticleIndex from "../components/ArticleIndex.astro"; // Importing the ArticleIndex component

const domains = [
  {
    domain: "site.prismbot.icu",
    description: "You are here",
  },
  {
    domain: "cdn.prismbot.icu",
    description: "CDN/fileshare and Link shortener",
  }
];
---

<Layout
  title="Domains - Rosie"
  ogTitle="Domains"
  description="List of domains owned by Rosie."
>
  <ArticleIndex
    title="Domains"
    navCurrent="/domains"
  >
    <!-- Using the slot named 'description' for the explanatory text -->
    <Fragment slot="description">
      All root domains owned (on a registry level) by Rosie V.
      Domains that redirect to domains not in this list may not be in complete control.
      Content outside of these domains cannot be guaranteed to be owned or managed by Ashlynne.
      Last updated: 2024-12-20 4:45PM EST
    </Fragment>

    <!-- Mapping over the domains array to display each domain using the DomainCard component -->
    {
      domains.map(({ domain, description }) => (
        <DomainCard domain={domain} description={description} />
      ))
    }
  </ArticleIndex>
</Layout>
